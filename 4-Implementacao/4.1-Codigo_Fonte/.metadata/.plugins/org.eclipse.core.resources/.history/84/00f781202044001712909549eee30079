package br.com.eits.boot.test.domain.entity;

import org.junit.Assert;
import org.junit.Test;

import br.com.eits.boot.domain.entity.conta.Farmacia;
import br.com.eits.boot.domain.entity.conta.FarmaciaPerfil;
import br.com.eits.boot.test.domain.AbstractUnitTests;

/**
 * 
 * @author rodrigo@eits.com.br
 * @since 09/05/2013
 * @version 1.0
 */
public class FarmaciaTestes extends AbstractUnitTests
{
	/*-------------------------------------------------------------------
	 *                           ATTRIBUTES
	 *-------------------------------------------------------------------*/

	/*-------------------------------------------------------------------
	 *                           TESTS
	 *-------------------------------------------------------------------*/
	/**
     * 
     */
	@Test
	public void autorizacaoAdministradorDevePassar()
	{
		final Farmacia farmacia = new Farmacia();
		user.setPerfil( FarmaciaPerfil.ADMINISTRADOR );
		
		Assert.assertNotNull( user.getAuthorities() );
		Assert.assertTrue( user.getAuthorities().contains( FarmaciaPerfil.ADMINISTRADOR ) );
		Assert.assertTrue( user.getAuthorities().contains( FarmaciaPerfil.COMERCIAL ) );
		Assert.assertTrue( user.getAuthorities().contains( FarmaciaPerfil.FINANCEIRO ) );
		Assert.assertTrue( user.getAuthorities().contains( FarmaciaPerfil.ASSOCIADO ) );
		Assert.assertTrue( user.getAuthorities().contains( FarmaciaPerfil.ATENDENTE ) );
	}
	/**
     * 
     */
	@Test
	public void atendenteAcessandoFinanceiro()
	{
		final Farmacia farmacia = new Farmacia();
		farmacia.setPerfil( FarmaciaPerfil.ATENDENTE );
		
		Assert.assertNotNull( farmacia.getAuthorities() );
		Assert.assertTrue( farmacia.getAuthorities().contains( FarmaciaPerfil.FINANCEIRO ) );
	}
	/**
     * 
     */
	@Test
	public void associadoAcessandoAssociado()
	{
		final Farmacia farmacia = new Farmacia();
		farmacia.setPerfil( FarmaciaPerfil.ASSOCIADO );
		
		Assert.assertNotNull( user.getAuthorities() );
		Assert.assertTrue( user.getAuthorities().contains( FarmaciaPerfil.ASSOCIADO ) );
	}
}
